<Window x:Class="Variant3.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Variant3"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid x:Name="Menu">
        <TextBlock Background="Blue" HorizontalAlignment="Center" Margin="0,10,0,0" TextWrapping="Wrap" Text="Меню" VerticalAlignment="Top" Height="105" Width="210" FontSize="72"/>
        <Button Content="Input" HorizontalAlignment="Center" Margin="0,120,0,0" VerticalAlignment="Top" Height="80" Width="210" FontSize="48" Click="Button_Click_1"/>
        <Button Content="Work" HorizontalAlignment="Center" Margin="0,205,0,0" VerticalAlignment="Top" Height="80" Width="210" FontSize="48" Click="Button_Click_2"/>
        <Button Content="Exit" HorizontalAlignment="Center" Margin="0,290,0,0" VerticalAlignment="Top" Height="80" Width="210" FontSize="48" Click="Button_Click"/>

    </Grid>
</Window>
